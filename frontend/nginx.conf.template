server {
    listen 80;
    server_name ${CUSTOMER_DOMAIN};

    location /api {
        proxy_pass http://${API_HOST}:${API_PORT};
    }

    location / {
      root /usr/share/nginx/html/customer;
      try_files $uri /index.html;
    }
}

